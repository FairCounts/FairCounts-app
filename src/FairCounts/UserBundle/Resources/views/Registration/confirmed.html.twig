{% extends '::base.html.twig' %}
{% block userMenu %}
<div id="notLoggedMenu">
  <a href="{{ path("fos_user_registration_register") }}">Sign up</a> 
  <a href="{{ path("fos_user_security_login") }}">Sign in</a>
</div>
{% endblock %}
{% block body %}
<div id="navContent">
  <div class="linkList">
    <div class="link"><span class="icon icon-single icon-white icon-40 home"></span></div>
    <div class="link"><span class="icon icon-single icon-white icon-40 group"></span></div>
    <div class="link"><span class="icon icon-single icon-white icon-40 stats"></span></div>
    <div class="link"><span class="icon icon-single icon-white icon-40 info"></span></div>
  </div>
  <div class="user"><span class="name">John Doe</span><span class="icon icon-white icon-20 down"></span></div>
  <div class="mobileNav"><span class="icon icon-white icon-40 menu"></span></div>
</div>
</nav>
<div id="content">
  <div class="basicForm" id="confirmedRegistration">
    Congrats %username%, your account is now activated.<br/>
    <span class="icon icon-single check icon-green icon-160"></span><br/>
    <a href="index.html"><input type="button" class="button basicButton" value="Back to homepage"/></a>
  </div>
</div>
{% endblock %}