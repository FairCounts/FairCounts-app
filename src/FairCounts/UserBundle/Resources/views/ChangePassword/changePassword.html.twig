{% extends '::base.html.twig' %}
{% block userMenu %}
<div id="notLoggedMenu">
  <a href="{{ path("fos_user_registration_register") }}">Sign up</a> 
  <a href="{{ path("fos_user_security_login") }}">Sign in</a>
</div>
{% endblock %}
{% block body %}
<div id="content">
  <div class="basicForm smallForm">
    <h1>Change password</h1>
    {% if form_errors(form) %}
    <div id="errorBar">{{ form_errors(form) }}</div>
    {% endif %}
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" id="formLogin">
      <span class="" id="currentPasswordSpan">
        {{ form_widget(form.current_password, {'attr': {'placeholder': 'Mot de passe actuel'} }) }}
        <div class="error"></div>
      </span><br/>
      <span class="" id="newPassword1Span">
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Nouveau mot de passe'} }) }}
        <div class="error"></div>
      </span><br/>
      <span class="" id="newPassword2Span">
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmation du mot de passe'} }) }}
        <div class="error"></div>
      </span><br/>
      {{ form_rest(form) }}
      <input type="submit" id="submit" name="submit" class="button" value="Valider"/>
    </form>
  </div>
</div>
{% endblock %}