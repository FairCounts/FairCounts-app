<!--
Add an expense
-->
<div class="basicForm" id="addExpense" ng-controller="addExpenseController">
  <h1>Add an expense</h1>
  <div class="inputField">
    <div id="groupPreInput" class="preInput"><span class="icon icon-white icon-22 lock"></span></div>
    <input type="text" id="groupInput" placeholder="Expense name"/>
  </div>
  <div class="inputField">
    <div id="amountPreInput" class="preInput">$</div>
    <input type="text" id="amountInput" placeholder="Amount ($)"/>
  </div>
  <h2>Who paid?</h2>
  <ul id="payerList" class="userList">
    <li ng-repeat="groupParticipant in groupParticipants" ng-click="payerClicked(groupParticipant)">
      <div id="participantCheckButton" class="{{ isPayer(groupParticipant) }}"><span class="icon icon-22 check"></span></div>
      <div class="participantName">{{ groupParticipant.name }}</div>
    </li>
  </ul>
  <h2>Who participated?</h2>
  <ul id="participantsList" class="userList">
    <li ng-repeat="groupParticipant in groupParticipants" ng-click="participantClicked(groupParticipant)">
      <div id="participantCheckButton" class="{{ isExpenseParticipant(groupParticipant) }}"><span class="icon icon-22 check"></span></div>
      <div class="participantName">{{ groupParticipant.name }}</div>
    </li>
  </ul>
  <a href="#"><input type="submit" class="button" value="Add"/></a>
</div>